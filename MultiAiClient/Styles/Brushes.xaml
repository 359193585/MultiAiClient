<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========= 基础 ========= -->
    <SolidColorBrush x:Key="Brush.Transparent"
                     Color="{StaticResource Color.Transparent}"/>

    <SolidColorBrush x:Key="Brush.White"
                     Color="{StaticResource Color.White}"/>

    <SolidColorBrush x:Key="Brush.Black"
                     Color="{StaticResource Color.Black}"/>

    <!-- ========= 灰阶 ========= -->
    <SolidColorBrush x:Key="Brush.Gray.900"
                     Color="{StaticResource Color.Gray.900}"/>
    <SolidColorBrush x:Key="Brush.Gray.800"
                     Color="{StaticResource Color.Gray.800}"/>
    <SolidColorBrush x:Key="Brush.Gray.700"
                     Color="{StaticResource Color.Gray.700}"/>
    <SolidColorBrush x:Key="Brush.Gray.600"
                     Color="{StaticResource Color.Gray.600}"/>
    <SolidColorBrush x:Key="Brush.Gray.500"
                     Color="{StaticResource Color.Gray.500}"/>
    <SolidColorBrush x:Key="Brush.Gray.400"
                     Color="{StaticResource Color.Gray.400}"/>
    <SolidColorBrush x:Key="Brush.Gray.300"
                     Color="{StaticResource Color.Gray.300}"/>
    <SolidColorBrush x:Key="Brush.Gray.200"
                     Color="{StaticResource Color.Gray.200}"/>
    <SolidColorBrush x:Key="Brush.Gray.100"
                     Color="{StaticResource Color.Gray.100}"/>

    <!-- ========= 主色 ========= -->
    <SolidColorBrush x:Key="Brush.Primary"
                     Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Primary.Light"
                     Color="{StaticResource Color.Primary.Light}"/>
    <SolidColorBrush x:Key="Brush.Primary.Dark"
                     Color="{StaticResource Color.Primary.Dark}"/>

    <!-- ========= 状态 ========= -->
    <SolidColorBrush x:Key="Brush.Success"
                     Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="Brush.Warning"
                     Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="Brush.Error"
                     Color="{StaticResource Color.Error}"/>
    <SolidColorBrush x:Key="Brush.Info"
                     Color="{StaticResource Color.Info}"/>

    <!-- ========= 边框 / 分割 ========= -->
    <SolidColorBrush x:Key="Brush.Border.Light"
                     Color="{StaticResource Color.Border.Light}"/>
    <SolidColorBrush x:Key="Brush.Border.Dark"
                     Color="{StaticResource Color.Border.Dark}"/>

    <!-- ========= Tab ========= -->
    <SolidColorBrush x:Key="Brush.Tab.Background"
                     Color="{StaticResource Color.Tab.Background}"/>
    <SolidColorBrush x:Key="Brush.Tab.Background.Selected"
                     Color="{StaticResource Color.Tab.Background.Selected}"/>
    <SolidColorBrush x:Key="Brush.Tab.Hover"
                     Color="{StaticResource Color.Tab.Hover}"/>

    <!-- ========= Button ========= -->
    <SolidColorBrush x:Key="Brush.Button.Primary"
                 Color="{StaticResource Color.Button.Primary}"/>
    <SolidColorBrush x:Key="Brush.Button.Primary.Hover"
                 Color="{StaticResource Color.Button.Primary.Hover}"/>
    <SolidColorBrush x:Key="Brush.Button.Primary.Pressed"
                 Color="{StaticResource Color.Button.Primary.Pressed}"/>

    <SolidColorBrush x:Key="Brush.Button.Disabled"
                 Color="{StaticResource Color.Button.Disabled}"/>
    <SolidColorBrush x:Key="Brush.Button.Disabled.Text"
                 Color="{StaticResource Color.Button.Disabled.Text}"/>


    <SolidColorBrush x:Key="Brush.Button.Secondary" Color="{StaticResource Color.Button.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Button.Foreground" Color="{StaticResource Color.Button.Foreground}"/>

    <SolidColorBrush x:Key="Brush.Background.Main" Color="{StaticResource Color.Background.Main}"/>
    
    
</ResourceDictionary>
