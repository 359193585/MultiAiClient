<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========= 基础中性色 ========= -->
    <Color x:Key="Color.Transparent">Transparent</Color>

    <Color x:Key="Color.White">#FFFFFFFF</Color>
    <Color x:Key="Color.Black">#FF000000</Color>

    <Color x:Key="Color.Gray.900">#FF1E1E1E</Color>
    <Color x:Key="Color.Gray.800">#FF2D2D30</Color>
    <Color x:Key="Color.Gray.700">#FF3E3E42</Color>
    <Color x:Key="Color.Gray.600">#FF515151</Color>
    <Color x:Key="Color.Gray.500">#FF6A6A6A</Color>
    <Color x:Key="Color.Gray.400">#FF8A8A8A</Color>
    <Color x:Key="Color.Gray.300">#FFA0A0A0</Color>
    <Color x:Key="Color.Gray.200">#FFC8C8C8</Color>
    <Color x:Key="Color.Gray.100">#FFE5E5E5</Color>

    <!-- ========= 主色（强调色） ========= -->
    <Color x:Key="Color.Primary">#FF2D7DFF</Color>
    <Color x:Key="Color.Primary.Light">#FF6FA3FF</Color>
    <Color x:Key="Color.Primary.Dark">#FF1E5FCC</Color>

    <!-- ========= 状态色 ========= -->
    <Color x:Key="Color.Success">#FF4CAF50</Color>
    <Color x:Key="Color.Warning">#FFFFC107</Color>
    <Color x:Key="Color.Error">#FFF44336</Color>
    <Color x:Key="Color.Info">#FF4FC1FF</Color>

    <!-- ========= 分割 / 边框 ========= -->
    <Color x:Key="Color.Border.Light">#FFD0D4DA</Color>
    <Color x:Key="Color.Border.Dark">#FF3E3E42</Color>

    <!-- ========= Tab 专用（但仍是 Color 层） ========= -->
    <Color x:Key="Color.Tab.Background">#FFE5E5E5</Color>
    <Color x:Key="Color.Tab.Background.Selected">#FFFFFFFF</Color>
    <Color x:Key="Color.Tab.Hover">#FFF2F2F2</Color>

    <!-- ========= Button ========= -->
    <Color x:Key="Color.Button.Primary">#FF3963D9</Color>
    <Color x:Key="Color.Button.Primary.Hover">#FF547CE8</Color>
    <Color x:Key="Color.Button.Primary.Pressed">#FF2A4CAB</Color>

    <Color x:Key="Color.Button.Disabled">#FFCCCCCC</Color>
    <Color x:Key="Color.Button.Disabled.Text">#FF888888</Color>

    <Color x:Key="Color.Button.Foreground">#FFFFFFFF</Color>
    <!-- 紫 -->
    <Color x:Key="Color.Button.Secondary">#AA6A33C0</Color>


    <Color x:Key="Color.Background.Main">#FFF5F5F5</Color>
    
</ResourceDictionary>
